            <msDesc xml:id="AM04-0582-en" xml:lang="en">
               <msIdentifier>
                  <repository ref="#AMIS">Stofnun Árna Magnússonar í íslenskum fræðum, Reykjavík</repository>
                  <idno>AM 582 4to</idno>
               </msIdentifier>

               <msContents>
                  <titlePage ana="no"/>

                  <msItem n="1" class="kon">
                     <locus from="1r:1" facs="#AM04-0582-0001r" to="6r:19"/>
                     <title type="uniform">Hákonar þáttur Hárekssonar</title>
                     <title type="parallel">Hákonar þáttr Hárekssonar</title>
                     <textLang mainLang="non"/>
                     <rubric>Soguþattur af Hakone Harekssyne</rubric>
                     <incipit>Eirn bonde var i Norex kongs ryke</incipit>
                     <explicit>og lykur sogu aff hakone härekssyne.</explicit>

                  </msItem>

                  <msItem n="2" class="ridd" defective="true">
                     <locus from="6v:1" facs="#AM04-0582-0006v" to="7r:30"/>
                     <title type="uniform">Nitida saga</title>
                     <textLang mainLang="non"/>
                     
                     <note>Two fragments. The first fragment contains part of the beginning of the saga. The second fragment runs to the end of the
                        text. Remainder of text preserved elsewhere in <ref target="AM04-0537" type="ms">AM 537 4to</ref>.</note>
                     
                     <msItem n="2.1" class="ridd">
                        <locus from="6v:1" to="6v:21"/>
                        <incipit defective="true">væne vid snio huyta litu</incipit>
                        <explicit defective="true">ad huorge j heiminum meige fin<ex>n</ex>ast natturu</explicit>
                        
                     </msItem>
                     
                     <msItem n="2.2" class="ridd">
                        <locus from="7r:1" to="7r:30"/>
                        <incipit defective="true">kest ad oll rykin feinge frid</incipit>
                        <explicit>og lykur so þessu æffin<ex>n</ex>tyre af hin<ex>n</ex>e frægu Nitida og livorio koonge.</explicit>
                        
                     </msItem>
                     
                  </msItem>

                  <msItem n="3" class="fas">
                     <locus from="7v:1" facs="#AM04-0582-0007v" to="20r:8"/>
                     <title ref="#eseab" type="uniform">Egils saga einhenda og Ásmundar berserkjabana</title>
                     <textLang mainLang="non"/>
                     <rubric>Hier byriar sógu af Eygle einhendta</rubric>
                     <incipit>Hertriggur hefur kongur heitid</incipit>
                     <explicit>og lukum vier so þessari sógu. Finis. Ende.</explicit>

                  </msItem>
                  
                  <msItem n="4" class="fas">
                     <locus from="20r:5" facs="#AM04-0582-0020r" to="36r:7"/>
                     <title ref="#hs" type="uniform">Hervarar saga og Heiðreks</title>
                     <textLang mainLang="non"/>
                     
                     <msItem n="4.1" class="">
                        <locus from="20r:5" to="21v:5"/>
                        <title type="uniform">Hervarar saga og Heiðreks</title>
                        <rubric>Hervarar þattur hinn gamle, finst so skrifadur s<ex>e</ex>m hierr eptirfilger</rubric>
                        <incipit>So finst skrifad j fornum bökum</incipit>
                        <explicit>þa streingdu heit Arngrims syner.</explicit>
                        
                        <note>The U-þáttr or prologue of the U redaction of Hervarar saga.</note>
                        
                     </msItem>
                     
                     <msItem n="4.2" class="">
                        <locus from="21v:6" to="36r:7"/>
                        <title type="uniform">Hervarar saga og Heiðreks</title>
                        <rubric>Sagan<ex>n</ex> af Heidreke konge og h<ex>a</ex>ns ættmon<ex>n</ex>um</rubric>
                        <incipit>Sigurlame hiet kong<ex>ur</ex>, h<ex>an</ex>n ried f<ex>yrir</ex> Gardar<ex>iki</ex></incipit>
                        <explicit>er Jvar kongur hin<ex>n</ex> vidfarum hafdi ätt.</explicit>
                        
                        <note>Expanded R-redaction of Hervarar saga.</note>
                        
                     </msItem>
                         
                  </msItem>

                  <msItem n="5" class="kont" defective="true">
                     <locus from="36v:1" facs="#AM04-0582-0036v" to="36v:9"/>
                     <title type="supplied">Konungatal</title>
                     <textLang mainLang="non"/>
                     <incipit defective="true">51. Gorm hin<ex>n</ex> gamle</incipit>
                     <explicit>105. Fridrich.</explicit>

                     <note>Fragment. Leaf cut off.</note>

                  </msItem>

                  <msItem n="6" class="fas">
                     <locus from="37r:1" facs="#AM04-0582-0037r" to="40v:7"/>
                     <title ref="#isg" type="uniform">Illuga saga Gríðarfóstra</title>
                     <textLang mainLang="non"/>
                     <rubric>Sagan<ex>n</ex> af Jlluga Grydarföstra</rubric>
                     <incipit>Sa kongur riede fyrer Danmork er Hryngur hiet</incipit>
                     <explicit>og lýkur so sogu Jlluga Grydarfostra.</explicit>

                  </msItem>

                  <msItem n="7" class="ridd" defective="true">
                     <locus from="40v:8" facs="#AM04-0582-0040v" to="40v:18"/>
                     <title type="uniform">Fertrams saga og Platós</title>
                     <textLang mainLang="non"/>
                     <rubric>Hier byriar saugu af hinum volduga Fertram og h<ex>a</ex>ns brod<ex>ur</ex> Plato</rubric>
                     <incipit>Artus hiet k<ex>ongur</ex> megtug<ex>ur</ex> o<ex>g</ex> störaudug<ex>ur</ex></incipit>
                     <explicit defective="true">un<ex>n</ex>i hv<ex>or</ex> m<ex>adur</ex> þ<ex>ess</ex> hugustu<ex>m</ex>, nu var ...</explicit>

                     <note>Fragment. Only the beginning of the text; previously pasted over. Remainder of text preserved in 
                        <ref target="AM04-0537" type="ms">AM 537 4to</ref>.</note>

                  </msItem>

                  <msItem n="8" class="fas" defective="true">
                     <locus from="41r:1" facs="#AM04-0582-0041r" to="41r:22"/>
                     <title ref="#jss" type="uniform">Þjalar-Jóns saga</title>
                     <textLang mainLang="non"/>
                     <rubric/>
                     <incipit defective="true"><gap/>lid folk ryke sins, o<ex>g</ex> lyser því, ad h<ex>ann</ex> ættlar
                        ad sækia brullup sitt</incipit>
                     <explicit>og lukum vier so þessare sögu, og sieu<ex>m</ex> avalt Gudi befalader.</explicit>

                     <note>Fragment. Only the end of the text; crossed-out and previously pasted-over. Remainder of text preserved in 
                        <ref target="AM04-0537" type="ms">AM 537 4to</ref></note>

                  </msItem>

                  <msItem n="9" class="fas" defective="true">
                     <locus from="41v:1" facs="#AM04-0582-0041v" to="44v:25"/>
                     <title ref="#esv" type="uniform">Eiríks saga víðförla</title>
                     <textLang mainLang="non"/>
                     <rubric>Sauguþättur af Eirike vydfórla</rubric>
                     <incipit>Þrandr er kong<ex>ur</ex> nefnd<ex>ur</ex> er firstur riede f<ex>yrir</ex> Þrandheime</incipit>
                     <explicit defective="true">sagt foru nautum synu<ex>m</ex> þ<ex>an</ex>n f<ex>yrir</ex>burd, s<ex>e</ex>m 
                        bar f<ex>yrir</ex> h<ex>ann</ex> <gap/></explicit>

                     <note>End of text written into lower margin in a later hand.</note>

                  </msItem>

                  <msItem n="10" class="isl">
                     <locus from="45r:1" facs="#AM04-0582-0045r" to="59r:30"/>
                     <title type="uniform">Kjalnesinga saga</title>
                     <textLang mainLang="non"/>
                     <rubric>Hier byriar søgu af Bua Andrydarsyne</rubric>
                     <incipit>Helge biola Ketils flatnefs, nam kialarnes</incipit>
                     <explicit>og endar þar m<ex>ed</ex> þessa kialarness sogu.</explicit>
                     <colophon>hæc legens condona candide tu mihi lector.</colophon>

                  </msItem>

                  <msItem n="11" class="islt">
                     <locus from="59v:1" facs="#AM04-0582-0059v" to="64r:10"/>
                     <title type="uniform">Jökuls þáttur Búasonar</title>
                     <title type="uniform">Jökuls þáttr Búasonar</title>
                     <textLang mainLang="non"/>
                     <rubric>Nw eptirfilger sagann af Jøkle Bwasyne</rubric>
                     <incipit>Jøkle þokte nu so illt verk sitt</incipit>
                     <explicit>þui londen<ex>n</ex> eru oss fiærlæg.</explicit>
                     <colophon>Finis ad lectorem. hæc cum tu legeris condona lector amice atq<ex>ue</ex> boni quæso, consule mi domine
                        definitu<ex>m</ex> die 21 Septembris Anno 1692 <name type="person" key="JonVig001">Ionas Wigfusius</name>.</colophon>

                  </msItem>
                  
                  <msItem n="12" class="laus">
                     <locus from="64r:11" facs="#AM04-0582-0064r" to="64r:15"/>
                     <title type="supplied">Lausavísa</title>
                     <incipit>Þigge sa sem þetta aa</incipit>
                     <explicit>hoskur allar stunder.</explicit>
                     <colophon><name type="person" key="KolSna001">Kolbeinn Snæbiørnsson</name> meh</colophon>
                     
                  </msItem>

                  <msItem n="13" class="isl" defective="true">
                     <locus from="64v:1" facs="#AM04-0582-0064v" to="68v:26"/>
                     <title type="uniform">Víga-Glúms saga</title>
                     <textLang mainLang="non"/>
                     <rubric>Hier byriar sogu Glums Eyolfzsonar</rubric>
                     <incipit>Helge het m<ex>adur</ex> o<ex>g</ex> v<ex>ar</ex> kallad<ex>ur</ex> Helge hin<ex>n</ex> magre</incipit>
                     <explicit defective="true">sagdist han<ex>n</ex> mundi lata sistur</explicit>

                     <note>Defective. Lacks ending.</note>

                  </msItem>

               </msContents>

                     <locus from="1r:1" to="1v:36"/>
                     <title type="uniform">Elis saga ok Rósamundu</title>
                     <textLang mainLang="non"/>
                     <incipit defective="true">og e<ex>r</ex> h<ex>ann</ex> nu sialfur h<ex>er</ex>
                        komin<ex>n</ex></incipit>
                     <explicit defective="true">m<ex>eð</ex> somð <ex>og</ex> tign <ex>og</ex> uirðuligum uirðingum</explicit>
                  </msItem>
                  
                  <msItem n="2" class="ridd" defective="true">
                     <locus from="2r:1" to="11r:37"/>
                     <title type="uniform">Bærings saga</title>
                     <textLang mainLang="non"/>
                     <incipit>Þriar ero ar þ<gap reason="damage"/>ær er hv<ex>er</ex> heit<ex>ir</ex> elfr</incipit>
                     <explicit>p<ex>er</ex> omnia secula seculo<ex>rum</ex> amen</explicit>
                  </msItem>
                  

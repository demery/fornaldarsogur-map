                  <titlePage ana="no"/>
                  
                  <msItem n="1" class="fas" defective="true">
                     <locus from="1r:1" to="3v:7"/>
                     <title ref="#eseab" type="uniform">Egils saga einhenda og Ásmundar berserkjabana</title>
                     <title type="parallel">Egils saga einhenda ok Ásmundar berserkjabana</title>
                     <textLang mainLang="non"/>
                     <rubric/>
                     <!-- incipit illegible in photograph; taken from handrit record; needs to be un-normalized -->
                     <incipit defective="true">skipað og brúðgumar [ni]ður settir</incipit>
                     <explicit><ex>ok</ex> au<ex>n</ex>gu þ<ex>vi</ex> se<ex>m</ex> þ<ex>ar</ex> v<ex>ar</ex> fyri</explicit>
                     <finalRubric><ex>ok</ex> luku<ex>m</ex> v<ex>er</ex> þ<ex>ar</ex> þessi saugu.</finalRubric>
                     
                     <note>Only the end of the saga preserved here.</note>
                     
                  </msItem>
                  
                  <msItem n="2" class="ridd">
                     <locus from="3v:8" to="49v:26"/>
                     <title type="uniform">Vilhjálms saga sjóðs</title>
                     <textLang mainLang="non"/>
                     <rubric/>
                     <incipit><supplied reason="omitted">S</supplied>aga þ<ex>es</ex>si se<ex>m</ex> nu byriazt hefzt fyst j ei<ex>n</ex>gla<ex>n</ex>di</incipit>
                     <explicit>Ammiral hét sonur Vilhjálms og Astrinomíu er þar tók síðan
                        ríki.</explicit>
                     <colophon>Nú er saga þessi komin á enda. Hafi sá þökk sem klóraði en hver gaman
                        sem til heyrir.</colophon>
                  
                  </msItem>
                  
                  <msItem n="3" class="fas" defective="true">
                     <locus from="49v:27" to="63r:18"/>
                     <title ref="#bsh" type="uniform">Bósa saga</title>
                     <textLang mainLang="non"/>
                     <rubric>Hier biriar søguna af Bøgu-Bosa</rubric>
                     <incipit><supplied reason="omitted">S</supplied>aga þ<ex>e</ex>sse hefzt eigi af lokleysu þeire</incipit>
                     <explicit>þaa h<ex>ann</ex> van ormin<ex>n</ex></explicit>
                     <finalRubric><ex>ok</ex> lukum vær nu hi<ex>er</ex> saugu B<ex>ögu</ex>-B<ex>osa</ex>.</finalRubric>
                     
                     <note>One leaf lacking between fols. <locus>59</locus> and <locus>60</locus>. 
                        Rubric on fol. <locus>49v</locus> written in a later hand.</note>
                     
                  </msItem>
                  
                  <msItem n="4" class="avint" defective="true">
                     <locus from="63r:19" to="64v:27"/>
                     <title type="supplied">Af bóndasyni nokkrum í kóngsgarði</title>
                     <textLang mainLang="non"/>
                     <rubric/>
                     <incipit><supplied reason="omitted" >K</supplied>ong<ex>ur</ex> ein<ex>n</ex> rik<ex>ur</ex> v<ex>ar</ex> j þyuska[?]
                        la<ex>n</ex>de</incipit>
                     <explicit defective="true">k<ex>on</ex>g<ex>ur</ex> s<ex>arar</ex>[?] ef þ<ex>e</ex>sse saga p<ex>ro</ex>fazt</explicit>
                     
                     <note>Defective. Lacks ending.</note>
                     
                  </msItem>
                  
                  <msItem n="5" class="fas" defective="true">
                     <locus from="65r:1" to="71v:6"/>
                     <title ref="#ththb" type="uniform">Þorsteins þáttur bæjarmagns</title>
                     <textLang mainLang="non"/>
                     <rubric/>
                     <incipit defective="true">v<ex>ar</ex> allt gullskot<ex>id</ex> <ex>ok</ex> gi<ex>ar</ex>na uilldi þost<ex>einn</ex>
                     dukin<ex>n</ex> eiga</incipit>
                     <explicit><ex>ok</ex> hafa þav ecki sezt sida<ex>n</ex> j noregi</explicit>
                     <finalRubric><ex>ok</ex> luku<ex>m</ex> v<ex>er</ex> þ<ex>ar</ex> þætti þost<ex>eins</ex> bæi<ex>ar</ex>
                     b<ex>ar</ex>ns.</finalRubric>
                     
                     <note>Defective. Lacks beginning. Lacunae after fols. <locus from="67r" to="67v">67</locus> and
                           <locus from="70r" to="70v">70</locus>.</note>
                     
                  </msItem>
                  
                  <msItem n="6" class="ridd" defective="true">
                     <locus from="71v:7" to="76v:25"/>
                     <title type="uniform">Vilmundar saga viðutan</title>
                     <textLang mainLang="non"/>
                     <rubric/>
                     <incipit><supplied reason="omitted">V</supplied>isivaldr hef<ex>r</ex> k<ex>on</ex>gr nefndur v<ex>er</ex>id</incipit>
                     <explicit defective="true">en<ex>n</ex> f<ex>an</ex>gastack<ex>ur</ex>in<ex>n</ex> u<ex>ar</ex></explicit>
                     
                     <note>Defective. Lacks ending. Lacuna after fols. <locus>72</locus> and <locus>74</locus>.</note>
                     
                  </msItem>
                  
                  <msItem n="7" class="ridd" defective="true">
                     <locus from="77r:1" to="82v:x"/>
                     <title type="uniform">Flóres saga konungs og sona hans</title>
                     <textLang mainLang="non"/>
                     <rubric/>
                     <incipit defective="true"><supplied>Ka</supplied>stus helltt lei<ex>n</ex>gi st<ex>ri</ex>d v<ex>id</ex> eirn<ex>n</ex>
                     rick<ex>an</ex>[?] hertuga</incipit>
                     <explicit defective="true"><ex>ok</ex> var þar en<ex>n</ex> dyrle<supplied>gasta</supplied></explicit>
                     
                     <note>Fragment.</note>
                     
                  </msItem>

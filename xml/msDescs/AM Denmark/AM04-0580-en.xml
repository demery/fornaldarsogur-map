                     <textLang mainLang="non"/>
                     <incipit defective="true">h<ex>er</ex> eru komn<ex>er</ex> at ek ætla</incipit>
                     <explicit>ok lykr þar sogv M<ex>agus</ex> Iar<supplied reason="omitted">l</supplied>s</explicit>

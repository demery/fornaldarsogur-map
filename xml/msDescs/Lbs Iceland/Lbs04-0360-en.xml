                  <msContents>
                     <textLang mainLang="is" otherLangs="la"/>
                     <titlePage ana="later">
                        <titlePart>Þessi saga af Starkaði gamla er af Sögusafni Boga Benediktssonar
                           og af manuscriptis merkt í catalogo under Numer 12 Sub. Lit A. </titlePart>
                        <note>Flyleaf 1r</note>
                        <note>Flyleaf 2r. Þessa bók á Herra Br. Benedictsen í Flatey</note>
                        
                     </titlePage>
                     <msItem n="1" class="forns">
                        <locus from="1r" to="49v"/>
                        <title type="uniform">Starkaðar saga gamla</title>
                        <author key="">Snorri Björnsson á Húsafelli</author>
                        <rubric>Sagan af Starkaði gamla Stórvirkssyni</rubric>
                        <note>A verse in the end of the story in Icelandic and Latin</note>
                        <note>A few lines in runic script in chapter 13<locus facs="#Lbs04-0360-0089v" from="89v" to="89v"/></note>
                        <textLang mainLang="non"/>
                     <msItem n="1.1" class="kvad">
                        <locus from="50r" to="50r"/>
                        <title type="uniform">Vikarsbálkur</title>
                        <rubric>Þeir sem vilja verða fróðari í Ljóðmælum Starkaðar geta lesið Vikars
                           þátt í Hrólfs Gautrekssonar sögu frá 3ja til 8da kapitula Eftirfylgjandi
                           vísur úr Vikarsbálki hefur sá svenski Björner útgefið</rubric>
                        <note>Verses from Vikarsbálkur</note>
                        <incipit>Fylgða ek fylki</incipit>
                        <note>As in Biörners edition</note>
                        <textLang mainLang="non"/>
                     </msItem>
                     </msItem>
                     <msItem n="2" class="forns">
                        <locus from="50v" to="51v"/>
                        <title type="uniform">Haralds saga hilditannar</title>
                        <rubric>Um Harald hilditönn og Sigurð hring</rubric>
                        <textLang mainLang="non"/>
                     </msItem>
                  </msContents>

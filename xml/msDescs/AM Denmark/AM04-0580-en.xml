                     <textLang mainLang="non"/>
                     <incipit>Saga sia e<ex>r</ex> eigi sama<ex>n</ex> set m<ex>eð</ex>
                        loklausv</incipit>
                     <explicit defective="true">hei<ex>m</ex> t<ex>il</ex> saxl<ex>an</ex>dz nv
                        hofv<ex>m</ex></explicit>
                  </msItem>
                  
